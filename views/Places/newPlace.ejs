<% layout('layout/Boilerplate')-%>
<% block('title', 'Add Your Home') -%>
<title>Add Your Home</title>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg p-4">
                    <h2 class="text-center mb-4">Add a New Place</h2>
                    <form action="/addNew" method="post">
                        <div class="mb-3">
                            <label for="title" class="form-label fw-bold">Title</label>
                            <input type="text" class="form-control" name="newPlace[title]" id="title" placeholder="Add a title" required>
                        </div>
                        <div class="mb-3">
                            <label for="desc" class="form-label fw-bold">Description</label>
                            <textarea class="form-control" name="newPlace[desc]" id="desc" placeholder="Add description" rows="3" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="minprice" class="form-label fw-bold">Minimum Price</label>
                            <input type="number" class="form-control" name="newPlace[minprice]" id="minprice" placeholder="Add minimum price" value="0" required>
                        </div>
                        <div class="mb-3">
                            <label for="maxprice" class="form-label fw-bold">Maximum Price</label>
                            <input type="number" class="form-control" name="newPlace[maxprice]" id="maxprice" placeholder="Add maximum price" value="0" required>
                        </div>
                        <div class="mb-3">
                            <label for="location" class="form-label fw-bold">Location</label>
                            <input type="text" class="form-control" name="newPlace[location]" id="location" placeholder="Add location" required>
                        </div>
                        <div class="mb-3">
                            <label for="country" class="form-label fw-bold">Country</label>
                            <input type="text" class="form-control" name="newPlace[country]" id="country" placeholder="Country" required>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label fw-bold">Image URL</label>
                            <input type="text" class="form-control" name="newPlace[image]" id="image" placeholder="Add image URL" required>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-4">Add Place</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap CSS (Make sure it's included in your layout) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</body>
