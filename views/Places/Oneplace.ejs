<div class="oneplace-container">
    <h2><%= thatplace.title %></h2>
    <img src="<%= thatplace.image %>" alt="<%= thatplace.title %>">
    <p class="mt-3"><%= thatplace.description %></p>
    <ul>
        <li><%= thatplace.location %></li>
        <li><%= thatplace.country %></li>
    </ul>
    <div class="oneplace-btn">
        <form action="/place/<%= thatplace._id %>/edit" method="get" class="mb-3">
            <button type="submit" class="btn btn-outline-dark">Edit</button>
        </form>
        <form action="/place/<%= thatplace._id %>/delete?_method=DELETE" method="post" class="mb-3">
            <button class="btn btn-outline-dark" type="submit">Delete</button>
        </form>
    </div>

    <div class="col-8 offset-2 mb-3 mt-3">
        <h4>Leave a Review</h4>
        </hr>
        <form action="/Places/<%= thatplace._id %>/review" method="post" novalidate class="needs-validation">
            <label for="rating" class="form-label fw-bold">rating</label>
            <input type="range" min="1" max="5" name="review[rating]" id="rating" class="form-control" >
            <label for="comment" class="form-label fw-bold">Comment</label>
            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
            <div class="invalid-feedback">
                You must add a comment submitting.
            </div>
        </br>
            <button type="submit" class="btn btn-outline-dark">submit</button>
        </form>
    </div>
</div>